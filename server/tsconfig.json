{
	"compilerOptions": {
		"target": "ES6",
		"module": "ESNext",
		"outDir": "./dist",
		"baseUrl": "./",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "bundler",
		"noEmit": false
	},
	"exclude": ["node_modules", "**/*.test.ts"]
}
